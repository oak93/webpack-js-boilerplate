{
  "name": "web-ui-js-boilerplate",
  "version": "1.0.0",
  "main": "index.js",
  "description": "a javascript boilerplate",
  "scripts": {
    "build": "webpack -p",
    "build:dev": "webpack -d",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "jest": {
    "moduleFileExtensions": [
      "js"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "transformIgnorePatterns": [
      "./node_modules/"
    ],
    "verbose": false
  },
  "devDependencies": {
    "@babel/core": "^7.8.7",
    "@babel/plugin-transform-modules-umd": "^7.8.3",
    "@babel/preset-env": "^7.8.7",
    "babel-jest": "^25.1.0",
    "babel-loader": "^8.3.0",
    "jest": "^25.1.0",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  }
}
